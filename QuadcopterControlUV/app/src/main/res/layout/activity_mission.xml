                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_elevation"
                android:layout_alignBottom="@+id/tv_elevation"
                android:layout_alignStart="@+id/tv_pitch"
                android:text="0"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_quadbatt"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_TextBPerc"
                android:layout_alignBottom="@+id/tv_TextBPerc"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/tv_TextSmartBat"
                android:text="96 %"
                android:textSize="18sp" />

            <ProgressBar
