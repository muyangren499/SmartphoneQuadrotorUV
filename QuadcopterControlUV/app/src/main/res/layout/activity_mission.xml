                android:text="Yaw:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView17"
                android:layout_below="@+id/textView17"
                android:layout_marginTop="9dp"
                android:text="Z:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dt:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignBaseline="@+id/tb_led"
                android:layout_alignBottom="@+id/tb_led"
                android:layout_alignStart="@+id/textView18" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textVw"
                android:layout_below="@+id/textVw"
                android:layout_marginTop="9dp"
                android:text="Y:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_TextBPerc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="Quadrotor Battery:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@+id/pb_motor4"
                android:layout_alignStart="@+id/textView10" />

            <TextView
                android:id="@+id/tv_smartbatt"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_TextSmartBat"
                android:layout_alignBottom="@+id/tv_TextSmartBat"
                android:layout_alignStart="@+id/tv_quadbatt"
                android:text="59 %"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_waypoints"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView13"
                android:layout_alignBottom="@+id/textView13"
                android:layout_alignStart="@+id/tv_smartbatt"
                android:text="0"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_east"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textVw"
                android:layout_alignBottom="@+id/textVw"
