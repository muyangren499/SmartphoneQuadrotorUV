                android:layout_alignBottom="@+id/textView18"
                android:layout_alignEnd="@+id/tv_north"
                android:layout_alignStart="@+id/tv_north"
                android:layout_toStartOf="@+id/textView20"
                android:paddingLeft="2sp"
                android:text="0"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_dt"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingLeft="2sp"
                android:text="0"
                android:textSize="18sp"
                android:layout_alignBaseline="@+id/tb_led"
                android:layout_alignBottom="@+id/tb_led"
                android:layout_alignEnd="@+id/textView13" />

            <TextView
                android:id="@+id/tv_roll"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_east"
                android:layout_alignBottom="@+id/tv_east"
                android:layout_alignStart="@+id/tv_pitch"
                android:text="0"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_pitch"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView19"
                android:layout_alignBottom="@+id/textView19"
