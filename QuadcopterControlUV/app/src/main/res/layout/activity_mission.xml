                android:max="100" />

            <ProgressBar
                android:id="@+id/pb_pitchjoystick"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView22"
                android:layout_alignStart="@+id/pb_rolljoystick"
                android:max="100" />

            <ProgressBar
                android:id="@+id/pb_yawjoystick"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView23"
                android:layout_alignStart="@+id/pb_pitchjoystick"
                android:max="100" />

            <ProgressBar
                android:id="@+id/pb_throttlejoystick"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView12"
                android:layout_alignStart="@+id/pb_yawjoystick"
                android:max="100" />

            <TextView
                android:id="@+id/tv_arm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView11"
                android:layout_marginStart="27dp"
                android:layout_toEndOf="@+id/textView11"
                android:text="Disarmed"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_flightmode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView11"
                android:layout_alignBottom="@+id/textView11"
                android:layout_alignStart="@+id/tv_arm"
                android:text="Take-off"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_controller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView15"
                android:layout_alignBottom="@+id/textView15"
                android:layout_alignStart="@+id/tv_flightmode"
