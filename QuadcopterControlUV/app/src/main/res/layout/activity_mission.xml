<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.survey360.quadcoptercontroluv.MenuActivities.MissionActivity">

    <FrameLayout
        android:layout_width="395dp"
        android:layout_height="667dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_TextSmartBat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:text="Smartphone Battery:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignTop="@+id/tv_TextBPerc"
                android:layout_alignStart="@+id/tv_TextBPerc" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_TextSmartBat"
                android:layout_below="@+id/tv_TextSmartBat"
                android:layout_marginTop="32dp"
                android:text="Waypoints received:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_TextBPerc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView10"
                android:layout_below="@+id/pb_motor4"
                android:layout_marginTop="31dp"
                android:text="Quadrotor Battery:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_smartbatt"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="B_Volt"
                android:textSize="20sp"
                android:layout_alignBaseline="@+id/tv_TextSmartBat"
                android:layout_alignBottom="@+id/tv_TextSmartBat"
                android:layout_alignStart="@+id/tv_quadbatt" />

            <TextView
                android:id="@+id/tv_waypoints"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView13"
                android:layout_alignBottom="@+id/textView13"
                android:layout_alignStart="@+id/tv_smartbatt"
                android:text="0"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_quadbatt"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="B_Percent"
                android:textSize="20sp"
                android:layout_marginStart="16dp"
                android:layout_alignBaseline="@+id/tv_TextBPerc"
                android:layout_alignBottom="@+id/tv_TextBPerc"
                android:layout_toEndOf="@+id/tv_TextSmartBat" />

            <ProgressBar
                android:id="@+id/pb_motor2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:max="100"
                android:layout_alignTop="@+id/textView5"
                android:layout_toEndOf="@+id/textView5"
                android:layout_marginStart="19dp"
                android:layout_alignBottom="@+id/textView5" />

            <ProgressBar
                android:id="@+id/pb_motor1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView5"
                android:layout_alignStart="@+id/pb_motor2"
                android:layout_alignTop="@+id/textView"
                android:max="100" />

            <ProgressBar
                android:id="@+id/pb_motor3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView7"
                android:layout_alignStart="@+id/pb_motor2"
                android:layout_alignTop="@+id/textView7"
                android:max="100" />

            <ProgressBar
                android:id="@+id/pb_motor4"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView10"
                android:layout_alignStart="@+id/pb_motor3"
                android:layout_alignTop="@+id/textView10"
                android:max="100" />

            <TextView
                android:id="@+id/tv_arm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_toEndOf="@+id/tv_TextBPerc"
                android:text="Disarmed"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_flightmode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView11"
                android:layout_alignBottom="@+id/textView11"
                android:layout_alignStart="@+id/tv_arm"
                android:text="Take-off"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_controller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView15"
                android:layout_alignBottom="@+id/textView15"
                android:layout_alignStart="@+id/tv_flightmode"
                android:text="H-infinity"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="System:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView"
                android:layout_marginStart="39dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Flight Mode:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@+id/textView2"
                android:layout_alignStart="@+id/textView2" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Controller:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@+id/textView11"
                android:layout_alignStart="@+id/textView11" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="71dp"
                android:text="Motor 1: "
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="36dp"
                android:layout_below="@+id/textView11"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/textView"
                android:layout_marginTop="8dp"
                android:text="Motor 2: "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Motor 3: "
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@+id/textView5"
                android:layout_alignStart="@+id/textView5" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView7"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="8dp"
                android:text="Motor 4: "
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
